{
  "name": "obs-simpleplayer",
  "version": "0.1.0",
  "homepage": "",
  "description": "simple music player meant for obs streams",
  "repository": {
    "type": "git",
    "url": "https://github.com/codelastnight/obs-SimplePlayer.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "rollup -c && electron-builder -p onTag",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "app": "electron .",
    "app-dev": "concurrently \"npm:dev\" \"npm:app\"",
    "format-check": "prettier --check \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\""
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "codelastnight",
        "repo": "obs-SimplePlayer"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": "pkg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "last night",
      "icon": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "obs-simpleplayer.exe"
    }
  },
  "author": "last night, Aveek Saha",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "autoprefixer": "^10.4.7",
    "concurrently": "^5.3.0",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.14",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^1.4.2",
    "rollup": "^2.76.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^0.4.6",
    "svelte": "^3.32.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.6"
  },
  "dependencies": {
    "@rollup/plugin-image": "^2.1.1",
    "about-window": "^1.15.2",
    "chokidar": "^3.5.1",
    "electron-is-dev": "^1.2.0",
    "electron-json-storage": "^4.5.0",
    "electron-storage": "^1.0.7",
    "electron-updater": "^5.0.5",
    "express": "^4.18.1",
    "howler": "^2.2.1",
    "jquery": "^3.5.1",
    "music-metadata": "^6.4.0",
    "popper.js": "^1.16.1",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1"
  }
}
