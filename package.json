{
  "name": "obs-simpleplayer",
  "version": "0.3.2",
  "homepage": "",
  "description": "simple music player meant for obs streams",
  "repository": {
    "type": "git",
    "url": "https://github.com/codelastnight/obs-SimplePlayer.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "rollup -c && electron-builder -p onTag",
    "dev": "rollup -c -w ",
    "start": "sirv public",
    "app": "electron .",
    "app-dev": "concurrently \"npm:dev\" \"npm:app\"",
    "format-check": "prettier --check \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "preinstall": "npx only-allow pnpm"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "codelastnight",
        "repo": "obs-SimplePlayer"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": "pkg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "last night",
      "icon": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable"
      ]
    },
    "portable": {}
  },
  "author": "last night, Aveek Saha",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "electron-reload": "2.0.0-alpha.1",
    "postcss": "^8.4.16",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "rollup": "^2.79.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.50.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-typescript": "^8.5.0",
    "@tsconfig/svelte": "^3.0.0",
    "about-window": "^1.15.2",
    "chokidar": "^3.5.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.2.1",
    "express": "^4.18.1",
    "howler": "^2.2.3",
    "jquery": "^3.6.1",
    "music-metadata": "^8.1.0",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "svelte-fa": "^3.0.3",
    "typescript": "^4.8.3"
  }
}
