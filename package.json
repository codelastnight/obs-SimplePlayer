{
  "name": "obs-simpleplayer",
  "version": "0.3.2",
  "homepage": "",
  "description": "simple music player meant for obs streams",
  "repository": {
    "type": "git",
    "url": "https://github.com/codelastnight/obs-SimplePlayer.git"
  },
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:watch": "electron-vite dev --watch",
    "preview": "electron-vite preview",
    "prebuild": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --config",
    "format-check": "prettier --check \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "preinstall": "npx only-allow pnpm",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "codelastnight",
        "repo": "obs-SimplePlayer"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 120,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": "pkg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "last night",
      "icon": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable"
      ]
    },
    "portable": {}
  },
  "author": "last night, Aveek Saha",
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^1.4.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/howler": "^2.2.7",
    "autoprefixer": "^10.4.14",
    "electron": "^20.3.12",
    "electron-builder": "^24.6.3",
    "electron-vite": "^1.0.25",
    "postcss": "^8.4.27",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^3.59.2",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.3.3",
    "vite": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "about-window": "^1.15.2",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "express": "^4.18.2",
    "howler": "^2.2.3",
    "music-metadata": "7.12.6",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "svelte-fa": "^3.0.4"
  }
}